Vagrant.configure(2) do |config|
	config.vm.box = 'centos/7'
	config.vm.box_url = 'https://app.vagrantup.com/centos/boxes/7'

	config.vm.define "iounejjaS" do |control|
		control.vm.hostname = "iounejjaS"
		control.vm.network "private_network", ip: "192.168.42.110"

		control.vm.provider "virtualbox" do |v|
			v.memory = 1024
			v.cpus = 1

			v.customize ["modifyvm", :id, "--name", "iounejjaS"]
			v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
			v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
		end

		control.vm.provision "shell", path: './src/server.sh'
	end

	config.vm.define "iounejjaSW" do |control|
		control.vm.hostname = "iounejjaSW"
		control.vm.network "private_network", ip: "192.168.42.111"

		control.vm.provider "virtualbox" do |v|
			v.memory = 1024
			v.cpus = 1

			v.customize ["modifyvm", :id, "--name", "iounejjaSW"]
			v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
			v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
		end

		control.vm.provision "shell", path: './scripts/worker.sh'
	end
end